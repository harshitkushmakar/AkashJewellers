<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:layout_marginTop="50dp"
    android:fillViewport="true"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:text="@string/sign_in_sign_up"
            android:textColor="#008080"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32sp"
            android:text="@string/sign_up_or_sign_in_description"
            android:textColor="#666666"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="@string/enter_your_user_name"
            android:textColor="#008080"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/enter_name"
                android:layout_width="match_parent"
                android:textColor="#008080"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType=""
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginBottom="40sp"
            android:background="#DDDDDD" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:text="@string/enter_mobile_number"
            android:textColor="#008080"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8sp"
                android:textColor="#008080"
                android:text="@string/_91"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="phone"
                android:textColor="#008080"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginBottom="40sp"
            android:background="#DDDDDD" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/getOtpButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32sp"
                android:background="@drawable/golden_button_background"
                android:padding="16sp"
                android:text="@string/get_otp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressbarGetOtp"
                android:layout_gravity="center"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32sp"
            android:gravity="center"
            android:orientation="horizontal">


            <View
                android:layout_width="0sp"
                android:layout_height="1sp"
                android:layout_weight="1"
                android:background="#DEE2E6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16sp"
                android:paddingEnd="16sp"
                android:text="@string/or"
                android:textColor="#ADB5BD" />

            <View
                android:layout_width="0sp"
                android:layout_height="1sp"
                android:layout_weight="1"
                android:background="#DEE2E6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16sp">

            <ImageView
                android:id="@+id/email_btn"
                android:layout_width="64sp"
                android:layout_height="64sp"
                android:contentDescription="@string/email_icon"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:src="@drawable/email" />

            <!--            <ImageView-->
            <!--                android:id="@+id/google_btn"-->
            <!--                android:layout_width="64sp"-->
            <!--                android:layout_height="64sp"-->
            <!--                android:layout_marginStart="32sp"-->
            <!--                android:contentDescription="@string/email_icon"-->
            <!--                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"-->
            <!--                android:src="@drawable/google" />-->

        </LinearLayout>

    </LinearLayout>
</ScrollView>
